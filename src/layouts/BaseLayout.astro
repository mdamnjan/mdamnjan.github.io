---
import NavBar from "../components/NavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="google-site-verification"
      content="UY0qo-ebozUTAm-ybpFwVTcAcrSpR68R2yqmVRN1x9o"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <main>
      <slot name="intro" />
      <hr />
      <slot name="about-me" />
      <hr />
      <slot name="education" />
      <hr />
      <slot name="experience" />
      <hr />
      <slot name="skills" />
      <hr />
      <slot name="projects" />
      <hr />
      <slot name="contact" />
      <p class="text-center font-thin text-sm">
        Made with <span class="animate-pulse">❤️</span> by Mimi Damnjanovic
      </p>
    </main>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  body {
    font-family:
      Gill Sans,
      Gill Sans MT,
      Calibri,
      Trebuchet MS,
      sans-serif;
  }
  nav > ul {
    padding: 20px;
  }
  main {
    margin: auto;
    padding: 1rem;
    width: calc(100% - 20px);
    max-width: 1100px;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
